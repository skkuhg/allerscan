# Environment Configuration
PORT=3005
NODE_ENV=production

# Database - Replace with your actual database URL
DATABASE_URL="your-production-database-url-here"

# JWT Configuration - Use strong, unique keys in production
JWT_SECRET="your-production-jwt-secret-here"
JWT_EXPIRES_IN="7d"
MAGIC_LINK_EXPIRES_IN="15m"

# Email Configuration - Configure with your email service
EMAIL_FROM="noreply@allerscan.com"
SMTP_HOST="your-smtp-host"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# Tavily AI API - Get your key from tavily.com
TAVILY_API_KEY="your-tavily-api-key-here"
TAVILY_BASE_URL="https://api.tavily.com"

# Frontend Configuration
FRONTEND_URL="https://your-frontend-domain.com"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"

# Logging
LOG_LEVEL="info"