# Development Environment Configuration
PORT=3005
NODE_ENV=development

# Database (use your local PostgreSQL instance)
DATABASE_URL="postgresql://postgres:password@localhost:5432/allerscan_dev"

# JWT Configuration (use secure keys in production)
JWT_SECRET="dev-jwt-secret-key-not-for-production-use"
JWT_EXPIRES_IN="7d"
MAGIC_LINK_EXPIRES_IN="15m"

# Email Configuration (for development, you can use services like Mailtrap)
EMAIL_FROM="dev@allerscan.com"
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-mailtrap-user"
SMTP_PASS="your-mailtrap-pass"

# Tavily AI API (get your key from tavily.com)
TAVILY_API_KEY="your-tavily-api-key-here"
TAVILY_BASE_URL="https://api.tavily.com"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"

# Logging
LOG_LEVEL="debug"